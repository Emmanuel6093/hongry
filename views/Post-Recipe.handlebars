<div class='addrecipe-container'>
  <h1>Step 1. Add Recipe Name and Description:</h1>
  <form id='addRecipe-form'>
    <input type='text' id='add-recipe-name' placeholder='Recipe Name' />
    <input type='text' id='add-recipe-desc' placeholder='Recipe Description' />
    <label for='add-recipe-image'>Add image:</label>
    <input type="file" id='add-recipe-img' />
  </form>
</div>
<div class='addingredients-container'>
  <h1>Step 2. Add Ingredients:</h1>
  <form id='addIngredient-form'>
    <input type='text' id='add-ingredient' placeholder='Ingredient Name' /> Ingredient Name />
    <p id = 'recipelist'></p>
    <input type='text' id='add-quantity' placeholder='Quantity' />
    <input type='text' id='add-unit' placeholder='Unit' />
  </form>
    <button id = 'addIngredientbtn'>Add Ingredient </button>
    <button id='submitRecipebtn' type='submit'>Submit Recipe</button>
</div>
