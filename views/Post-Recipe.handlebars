<div id="recipe-container">
    <div class='addrecipe-container card'>
        <h1 class="card-title">Step 1. Add Recipe Name and Description:</h1>
        <form id='addRecipe-form'>
            <input type='text' id='add-recipe-name' class="form-control" placeholder='Recipe Name' />
            <input type='text' id='add-recipe-desc' class="form-control" placeholder='Recipe Description' />
            <label for='add-recipe-img' class="styled-upload btn btn-secondary">Select image</label>
            <input type="file" id='add-recipe-img' class="btn btn-secondary" />
        </form>
    </div>
    <div class='addingredient-container card'>
        <h1 class="card=title">Step 2. Add Ingredients:</h1>
        <form id='addIngredient-form'>
            <input type='text' id='add-ingredient' class="form-control" placeholder='Ingredient Name' Ingredient Name />
            <p id = 'recipelist'></p>
            <input type='text' id='add-quantity' class="form-control" placeholder='Quantity' />
            <input type='text' id='add-unit' class="form-control" placeholder='Unit' />
        </form>
        <button id ='addIngredientbtn' class="btn btn-secondary">Add Ingredient </button>
        <button id='submitRecipebtn' class="btn btn-secondary" type='submit'>Submit Recipe</button>
    </div>
</div>

<script src='js/add-recipe.js' type='text/javascript'></script>
